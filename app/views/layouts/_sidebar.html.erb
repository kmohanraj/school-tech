<aside class="sidebar sidebar-left">
    <div class="sidebar-profile">
        <div class="avatar">
            <i class="on border-dark animated bounceIn"></i>
        </div>
        <div class="profile-body dropdown">
            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><h4>
                <span class="text-capitalize"><%= current_user.name%></span>
                <span class="caret"></span></h4></a>
            <small class="title"></small>
            <ul class="dropdown-menu animated fadeInRight" role="menu">
                <li class="divider"></li>
                <li>
                    <a href="javascript:void(0);">
                        <span class="icon"><i class="fa fa-user"></i>
                        </span>My Account</a>
                </li>
                <li class="divider"></li>
                <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                        <span class="icon"><i class="fa fa-sign-out"></i>
                        </span>Logout</a>
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
    <nav>
        <h5 class="sidebar-header">Navigation</h5>
        <ul class="nav nav-pills nav-stacked">
          <% if user_signed_in?%>
            <% if current_user.admin?%>
                <li class="active">
                    <%= link_to staffs_path do %>
                    <i class="fa fa-tachometer"></i> Dashboard
                    <% end %>
                </li>
                <li class="nav-dropdown">
                    <%= link_to subjects_path do %>
                      <i class="fa fa-list"></i> Subjects
                    <% end %>
                </li>
                <li class="nav-dropdown">
                    <%= link_to students_path do %>
                      <i class="fa fa-product-hunt"></i> Students
                    <% end %>
                </li>
                <li class="nav-dropdown">
                   <%= link_to new_staff_path do %>
                      <i class="fa  fa-line-chart"></i> New Staff
                    <% end %>
                </li>
            <% else %>
                <li class="active">
                    <%= link_to staffs_path do %>
                    <i class="fa fa-tachometer"></i> Dashboard
                    <% end %>
                </li>
            <% end %>
          <% end %>
        </ul>
    </nav>
</aside>