<div class="row">
  <div class="col-md-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title">Student From</h3>
          </div>
          <div class="panel-body">
              <%= form_with(model: @student, local: true, class: "form-horizontal form-border", id: "form") do |form| %>
                  <div class="form-group">
                      <label class="col-sm-3 control-label">Student Name</label>
                      <div class="col-sm-6">
                        <%= form.text_field :student_name, required: true, class: "form-control", placeholder: "Zuan Denish" %>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-sm-3 control-label">Student Code</label>
                      <div class="col-sm-6">
                        <%= form.text_field :student_code, class: "form-control", placeholder: "VM5820", readonly: true %>
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-sm-offset-4 col-sm-8">
                        <%= form.submit "Create Student", class: "btn btn-primary" %>
                        <%= link_to 'Back', students_path, class: "btn btn-primary" %>
                      </div>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
</div>
<script>
$(document).ready(function() {
    app.formValidation();
});
</script>