<div class="row">
  <div class="col-md-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title">Form Subject</h3>
          </div>
          <div class="panel-body">
              <%= form_with(model: @subject, local: true, class: "form-horizontal form-border", id: "form") do |form| %>
                  <div class="form-group">
                      <label class="col-sm-3 control-label">Subject Name</label>
                      <div class="col-sm-6">
                        <%= form.text_field :sub_name, required: true, class: "form-control", placeholder: "Ruby On Rails" %>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-sm-3 control-label">Subject Code</label>
                      <div class="col-sm-6">
                        <%= form.text_field :sub_code, class: "form-control", placeholder: "ROR1122", readonly: true %>
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-sm-offset-4 col-sm-8">
                        <%= form.submit "Create Subject", class: "btn btn-primary" %>
                        <%= link_to 'Back', subjects_path, class: "btn btn-primary" %>

                      </div>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
</div>

<script>
$(document).ready(function() {
    app.formValidation();
});
</script>